---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Card from '../components/Card.vue';
import Badge from '../components/Badge.vue';
import Button from '../components/Button.vue';

// Image imports
import sukunAcademyImage from '../assets/images/sukun academy bangladesh.jpeg';
import alFajrImage from '../assets/images/al fajr eco village.jpeg';
import darulHayahImage from '../assets/images/Darul Hayah Regenerative Farm.jpeg';

const baseUrl = import.meta.env.BASE_URL;

// Projects data
const projects = [
  {
    image: sukunAcademyImage,
    alt: 'Sukun Academy Bangladesh',
    badge: { variant: 'info', text: 'Future Project' },
    title: 'Sukun Academy — Bangladesh',
    description: 'Planned regenerative learning & training centre in Sylhet.',
    href: '/projects/sukun-academy',
  },
  {
    image: alFajrImage,
    alt: 'Al Fajr Ecovillage',
    badge: { variant: 'info', text: 'Future Project' },
    title: 'Al Fajr Ecovillage Jamāʿah',
    description: 'Planned ecovillage in Kulaura, Sylhet.',
    href: '/projects/al-fajr-ecovillage',
  },
  {
    image: darulHayahImage,
    alt: 'Darul Hayah Regenerative Farm',
    badge: { variant: 'success', text: 'Implementation Started' },
    title: 'Darul Hayah Regenerative Farm',
    description: 'Early-stage regenerative farm & learning sanctuary.',
    href: '/projects/darul-hayah-farm',
  },
];
---

<Layout 
  title="Our Projects - Sukun Regenerative Culture"
  description="Three interconnected initiatives bringing ecological and cultural regeneration into daily life in Sylhet, Bangladesh."
>
  <section class="section-padding">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="mb-6">Our Projects</h1>
        <p class="text-lg text-charcoal/80 leading-relaxed">
          Three interconnected initiatives are being developed to bring ecological and cultural regeneration into daily life.
          Two are still in visioning and land-securing phases, and one has just begun implementation.
          Follow our journey as these seeds grow into living realities.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 lg:gap-8 max-w-6xl mx-auto">
        {projects.map((project) => (
          <Card client:load>
            <div class="mb-4 -mx-6 -mt-6 overflow-hidden rounded-t-2xl">
              <Image 
                src={project.image}
                alt={project.alt}
                class="w-full h-56 object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <Badge variant={project.badge.variant} client:load>{project.badge.text}</Badge>
            <h2 class="mt-4 mb-3 text-2xl">{project.title}</h2>
            <p class="text-charcoal/80 mb-6">{project.description}</p>
            <Button href={project.href} baseUrl={baseUrl} client:load>
              Open Project
            </Button>
          </Card>
        ))}
      </div>
    </div>
  </section>
</Layout>
