// Action buttons
const actionButtons = [
  { href: '/get-involved', variant: 'primary', text: 'Apply for Courses' },
  { href: '/contact', variant: 'secondary', text: 'Host a Training' },
  { href: '/get-involved', variant: 'secondary', text: 'Volunteer / Work-Study' },
