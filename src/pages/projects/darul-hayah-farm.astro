---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Badge from '../../components/Badge.vue';
import Button from '../../components/Button.vue';
import Card from '../../components/Card.vue';
import darulHayahImage from '../../assets/images/Darul Hayah Regenerative Farm.jpeg';

const baseUrl = import.meta.env.BASE_URL;

// Development features data
const developmentFeatures = [
  { text: 'Regenerative farm design and food-forest beginnings' },
  { text: 'Eco-mosque and outdoor learning spaces', status: 'planned' },
  { text: 'Youth and volunteer involvement in farm setup' },
  { text: 'Training programs as the site grows' },
];

// Action buttons
const actionButtons = [
  { href: '/get-involved', variant: 'primary', text: 'Train With Us' },
  { href: '/get-involved', variant: 'secondary', text: 'Volunteer at the Farm' },
  { href: '/get-involved', variant: 'secondary', text: 'Support the Food Forest' },
];
---

<Layout 
  title="Darul Hayah Regenerative Farm | Implementation Started"
  description="A collaborative regenerative farm initiative in Sylhet that has just entered early implementation."
>
  <!-- Hero Image -->
  <div class="relative h-64 md:h-96 overflow-hidden">
    <Image 
      src={darulHayahImage}
      alt="Darul Hayah Regenerative Farm" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-evergreen/80 to-transparent"></div>
  </div>

  <section class="section-padding">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <Badge variant="success" client:load>Implementation Started</Badge>
        
        <h1 class="mt-4 mb-8">Darul Hayah Regenerative Farm</h1>

        <p class="text-sm text-charcoal/70 mb-6">
          <strong>Location:</strong> 15 acres in Gulni, Sylhet
        </p>

        <p class="text-lg mb-6 leading-relaxed">
          A collaborative regenerative farm initiative in Sylhet that has just entered early implementation.
          Darul Hayah is being developed as a working model of land healing, food abundance,
          and nature-based education.
        </p>

        <Card client:load className="mb-8">
          <h3 class="mb-4">Early development includes</h3>
          <ul class="space-y-3">
            {developmentFeatures.map((feature) => (
              <li class="flex items-start gap-3">
                <span class="text-evergreen text-xl">✓</span>
                <span>
                  {feature.text}
                  {feature.status && <em class="text-charcoal/60"> ({feature.status})</em>}
                </span>
              </li>
            ))}
          </ul>
        </Card>

        <Card client:load className="bg-sage-mist/40 mb-8">
          <p class="text-sm mb-2">
            <strong>Status:</strong> Implementation has recently started.
          </p>
          <p class="text-sm">
            <strong>Follow for updates:</strong> This is the first site moving from vision to practice — 
            updates will be shared regularly.
          </p>
        </Card>

        <div class="flex flex-wrap gap-3">
          {actionButtons.map((button) => (
            <Button 
              href={button.href} 
              variant={button.variant === 'primary' ? undefined : button.variant}
              baseUrl={baseUrl} 
              client:load
            >
              {button.text}
            </Button>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>
