---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Badge from '../../components/Badge.vue';
import Button from '../../components/Button.vue';
import Card from '../../components/Card.vue';
import alFajrImage from '../../assets/images/al fajr eco village.jpeg';

const baseUrl = import.meta.env.BASE_URL;

// Features data
const features = [
  { text: 'Eco-mosque and nature-based madrasa' },
  { text: 'Food forests, community gardens, and water harvesting' },
  { text: 'Natural homes, renewable energy, and shared facilities' },
  { text: 'Holistic wellness and community care spaces' },
];

// Action buttons
const actionButtons = [
  { href: '/get-involved', variant: 'primary', text: 'Join the Vision' },
  { href: '/get-involved', variant: 'secondary', text: 'Support Land Waqf' },
  { href: '/contact', variant: 'secondary', text: 'Partner for Development' },
];
---

<Layout 
  title="Al Fajr Ecovillage Jamāʿah | Future Project"
  description="A future faith- and culture-rooted ecovillage in Kulaura, Sylhet designed to demonstrate ecological living and cooperative community life."
>
  <!-- Hero Image -->
  <div class="relative h-64 md:h-96 overflow-hidden">
    <Image 
      src={alFajrImage}
      alt="Al Fajr Ecovillage" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-evergreen/80 to-transparent"></div>
  </div>

  <section class="section-padding">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <Badge variant="info" client:load>Future Project</Badge>
        
        <h1 class="mt-4 mb-8">Al Fajr Ecovillage Jamāʿah</h1>

        <p class="text-lg mb-6 leading-relaxed">
          A future faith- and culture-rooted ecovillage in Kulaura, Sylhet —
          designed to demonstrate ecological living, cooperative community life, and regenerative livelihoods.
        </p>

        <p class="text-lg mb-8 leading-relaxed">
          Al Fajr is currently an idea and visioning project, planned as a sanctuary
          where spiritual life and regenerative land stewardship support one another.
        </p>

        <Card client:load className="mb-8">
          <h3 class="mb-4">Future features envisioned</h3>
          <ul class="space-y-3">
            {features.map((feature) => (
              <li class="flex items-start gap-3">
                <span class="text-evergreen text-xl">✓</span>
                <span>{feature.text}</span>
              </li>
            ))}
          </ul>
        </Card>

        <h2 class="text-3xl font-bold text-dark-moss text-center mb-12">Vision Elements</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
          <Card client:load className="text-center">
            <div class="flex justify-center mb-4">
              <div class="w-16 h-16 bg-evergreen/10 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8 text-evergreen">
                  <path d="m17 14 3 3.3a1 1 0 0 1-.7 1.7H4.7a1 1 0 0 1-.7-1.7L7 14h-.3a1 1 0 0 1-.7-1.7L9 9h-.2A1 1 0 0 1 8 7.3L12 3l4 4.3a1 1 0 0 1-.8 1.7H15l3 3.3a1 1 0 0 1-.7 1.7H17Z"></path>
                  <path d="M12 22v-3"></path>
                </svg>
              </div>
            </div>
            <h3 class="text-xl font-bold text-dark-moss mb-3">Food Forests</h3>
            <p class="text-charcoal/80">Abundant perennial food systems designed with nature's wisdom</p>
          </Card>

          <Card client:load className="text-center">
            <div class="flex justify-center mb-4">
              <div class="w-16 h-16 bg-evergreen/10 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8 text-evergreen">
                  <path d="M7 16.3c2.2 0 4-1.83 4-4.05 0-1.16-.57-2.26-1.71-3.19S7.29 6.75 7 5.3c-.29 1.45-1.14 2.84-2.29 3.76S3 11.1 3 12.25c0 2.22 1.8 4.05 4 4.05z"></path>
                  <path d="M12.56 6.6A10.97 10.97 0 0 0 14 3.02c.5 2.5 2 4.9 4 6.5s3 3.5 3 5.5a6.98 6.98 0 0 1-11.91 4.97"></path>
                </svg>
              </div>
            </div>
            <h3 class="text-xl font-bold text-dark-moss mb-3">Water Harvesting</h3>
            <p class="text-charcoal/80">Regenerative water management for landscape resilience</p>
          </Card>

          <Card client:load className="text-center">
            <div class="flex justify-center mb-4">
              <div class="w-16 h-16 bg-evergreen/10 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8 text-evergreen">
                  <circle cx="12" cy="12" r="4"></circle>
                  <path d="M12 2v2"></path>
                  <path d="M12 20v2"></path>
                  <path d="m4.93 4.93 1.41 1.41"></path>
                  <path d="m17.66 17.66 1.41 1.41"></path>
                  <path d="M2 12h2"></path>
                  <path d="M20 12h2"></path>
                  <path d="m6.34 17.66-1.41 1.41"></path>
                  <path d="m19.07 4.93-1.41 1.41"></path>
                </svg>
              </div>
            </div>
            <h3 class="text-xl font-bold text-dark-moss mb-3">Renewable Energy</h3>
            <p class="text-charcoal/80">Clean energy solutions for sustainable community living</p>
          </Card>
        </div>

        <Card client:load className="bg-sage-mist/40 mb-8">
          <p class="text-sm mb-2">
            <strong>Status:</strong> Idea phase; land and structures not yet established.
          </p>
          <p class="text-sm">
            <strong>Follow for updates:</strong> Milestones will be shared as the vision moves into implementation.
          </p>
        </Card>

        <div class="flex flex-wrap gap-3">
          {actionButtons.map((button) => (
            <Button 
              href={button.href} 
              variant={button.variant === 'primary' ? undefined : button.variant}
              baseUrl={baseUrl} 
              client:load
            >
              {button.text}
            </Button>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>
