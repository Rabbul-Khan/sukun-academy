---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.vue';
import Card from '../components/Card.vue';
import Badge from '../components/Badge.vue';
---

<style>
  @import url('https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,500;0,700;1,400&family=Inter:wght@300;400&display=swap');

  .hero-title {
    font-family: 'EB Garamond', serif;
    font-weight: 700;
  }

  .hero-tagline {
    font-family: 'EB Garamond', serif;
    font-style: italic;
    font-weight: 400;
  }

  .hero-description {
    font-family: 'Inter', sans-serif;
    font-weight: 400;
  }
</style>

<Layout title="Sukun Regenerative Culture - Where Peace Nurtures Life">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center overflow-hidden -mt-16 md:-mt-20 pt-16 md:pt-20">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/farm.png" 
        alt="Sukun Regenerative Culture - Sylhet Farm" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-forest/75 via-forest/65 to-leaf/55"></div>
      <div class="absolute inset-0 backdrop-blur-[2px]"></div>
    </div>
    
    <div class="container-custom relative z-10 py-20">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="hero-title mb-4 animate-fade-in text-white drop-shadow-2xl text-4xl md:text-5xl lg:text-6xl leading-tight">
         Sukun Regenerative Culture
        </h1>
        <h2 class="hero-tagline mb-6 animate-fade-in text-white drop-shadow-2xl text-3xl md:text-4xl lg:text-4xl leading-tight">
          Where Peace Nurtures Life
        </h2>
        
        <p class="hero-description text-base md:text-lg mb-10 text-white/90 drop-shadow-md leading-relaxed tracking-wide  mx-auto">
          A faith-rooted movement for ecological and cultural regeneration in Sylhet. We cultivate inner peace (suk≈´n) and outward renewal (tajdƒ´d) through education, farming, and stewardship.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/projects" class="inline-block bg-white text-forest px-7 py-3 rounded-md font-medium text-sm hover:bg-mint-light transition-all shadow-lg hover:shadow-xl">
            Discover more
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Ecological + Cultural Themes -->
  <section class="section-padding">
    <div class="container-custom">
      <h2 class="text-center mb-12">Ecological + Cultural Themes</h2>
      
